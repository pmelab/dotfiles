window-padding-x = 4
window-padding-y = 2
cursor-color = #f0c6c6
cursor-text = #181926

keybind = clear
keybind = cmd+t=new_window
keybind = cmd+w=close_surface
keybind = cmd+q=close_all_windows
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard

# Pane and tab management now handled by Zellij
keybind = alt+shift+h=goto_split:left
keybind = alt+shift+j=goto_split:bottom
keybind = alt+shift+k=goto_split:top
keybind = alt+shift+l=goto_split:right
keybind = alt+shift+n=previous_tab
keybind = alt+shift+m=next_tab
keybind = alt+shift+u=new_split:down
keybind = alt+shift+i=new_split:right
keybind = alt+shift+y=toggle_split_zoom

keybind = alt+shift+o=decrease_font_size:1
keybind = alt+shift+p=increase_font_size:1
keybind = alt+shift+[=inspector:toggle
keybind = alt+shift+]=reload_config
keybind = shift+enter=text:\n
